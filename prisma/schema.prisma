// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model OneTimeCode {
  id        String   @id @default(cuid())
  code      String   @unique
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  usedAt    DateTime?
  expiresAt DateTime?
}
